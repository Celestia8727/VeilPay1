{
  "name": "veil402",
  "version": "1.0.0",
  "description": "Monad-native privacy subscription platform with stealth addresses and zero-knowledge proofs",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:monad": "hardhat run scripts/deploy-crosschain.js --network monad-testnet",
    "deploy:sepolia": "hardhat run scripts/deploy-crosschain.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "compile:noir": "cd noir && nargo compile && cd ..",
    "build:lib": "cd lib && npm run build && cd ..",
    "indexer": "node start-indexer.js",
    "dev:indexer": "node start-indexer.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "powershell -ExecutionPolicy Bypass -File ./run-all.ps1"
  },
  "keywords": [
    "privacy",
    "stealth-addresses",
    "zero-knowledge",
    "monad",
    "subscriptions",
    "x402"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@supabase/supabase-js": "^2.90.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "hardhat": "^2.28.3",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "elliptic": "^6.6.1",
    "ethers": "^6.9.0"
  }
}